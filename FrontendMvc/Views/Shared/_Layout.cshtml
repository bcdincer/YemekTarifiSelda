    <script>
        // Load categories for dropdown menu
        (async function() {
            try {
                const apiUrl = '/Categories/GetAll';
                const response = await fetch(apiUrl, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json'
                    }
                });
                
                const dropdown = document.getElementById('categories-dropdown');
                if (!dropdown) return;
                
                if (response.ok) {
                    const categories = await response.json();
                    if (categories && categories.length > 0) {
                        dropdown.innerHTML = categories
                            .sort((a, b) => (a.DisplayOrder || 0) - (b.DisplayOrder || 0))
                            .map(cat => `<a href="/?categoryId=${cat.Id}" class="dropdown-nav-item-link">${cat.Name}</a>`)
                            .join('');
                    } else {
                        dropdown.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">Kategori bulunamadı</div>';
                    }
                } else {
                    dropdown.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">Kategoriler yüklenemedi</div>';
                }
            } catch (error) {
                const dropdown = document.getElementById('categories-dropdown');
                if (dropdown) {
                    dropdown.innerHTML = '<div style="padding: 20px; text-align: center; color: #999;">Kategoriler yüklenemedi</div>';
                }
            }
        })();
    </script>
    
    

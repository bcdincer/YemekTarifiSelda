@model FrontendMvc.Models.Account.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="bd bgc-white p-30 bdrs-3 mT-50">
            <h4 class="mB-30 c-grey-900">Kayıt Ol</h4>
            
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mB-20"></div>
                
                <div class="form-group mB-20">
                    <label asp-for="FullName" class="form-label fw-600"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                
                <div class="form-group mB-20">
                    <label asp-for="Email" class="form-label fw-600"></label>
                    <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mB-20">
                    <label asp-for="Password" class="form-label fw-600"></label>
                    <input asp-for="Password" class="form-control" placeholder="Şifreniz (min. 6 karakter)" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group mB-20">
                    <label asp-for="ConfirmPassword" class="form-label fw-600"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Şifre tekrar" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="peers fxw-nw gap-10">
                    <div class="peer">
                        <button type="submit" class="btn btn-primary" style="color: white;">
                            <i class="ti-user"></i> Kayıt Ol
                        </button>
                    </div>
                    <div class="peer">
                        <a asp-action="Login" class="btn btn-outline-primary">
                            <i class="ti-key"></i> Zaten Hesabınız Var mı?
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


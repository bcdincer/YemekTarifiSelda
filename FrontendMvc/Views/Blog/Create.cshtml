@model FrontendMvc.Models.Blog.CreateBlogPostViewModel

@{
    ViewData["Title"] = "Yeni Blog Yazısı";
    var categories = ViewBag.Categories as List<FrontendMvc.Models.Recipes.CategoryViewModel> ?? new();
}

<div class="row gap-20">
    <div class="col-12">
        <div class="bd bgc-white p-20">
            <h4 class="mB-20">Yeni Blog Yazısı</h4>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mB-20"></div>

                <div class="form-group mB-20">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mB-20">
                    <label asp-for="Excerpt" class="form-label"></label>
                    <textarea asp-for="Excerpt" class="form-control" rows="3" placeholder="Blog yazısının kısa özeti (liste görünümünde gösterilir)"></textarea>
                    <span asp-validation-for="Excerpt" class="text-danger"></span>
                </div>

                <div class="form-group mB-20">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="15" placeholder="Blog yazısının tam içeriği (HTML formatında olabilir)"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                    <small class="form-text text-muted">HTML etiketleri kullanabilirsiniz.</small>
                </div>

                <div class="form-group mB-20">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-text text-muted">Veya aşağıdan dosya yükleyebilirsiniz.</small>
                </div>

                <div class="form-group mB-20">
                    <label for="imageFile" class="form-label">Görsel Dosyası</label>
                    <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                    <small class="form-text text-muted">Maksimum 5MB. JPG, PNG, GIF veya WebP formatında olmalıdır.</small>
                </div>

                <div class="form-group mB-20">
                    <label asp-for="ImageBanner" class="form-label"></label>
                    <input asp-for="ImageBanner" class="form-control" placeholder="Görsel üzerinde gösterilecek banner metni" />
                    <span asp-validation-for="ImageBanner" class="text-danger"></span>
                </div>

                <div class="form-group mB-20">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">Kategori Seçiniz (Opsiyonel)</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group mB-20">
                    <div class="form-check">
                        <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                        <label asp-for="IsPublished" class="form-check-label"></label>
                    </div>
                </div>

                <div class="form-group mB-20">
                    <div class="form-check">
                        <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                        <label asp-for="IsFeatured" class="form-check-label"></label>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="ti-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="ti-close"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


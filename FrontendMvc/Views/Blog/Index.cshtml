@model IEnumerable<FrontendMvc.Models.Blog.BlogPostViewModel>

@{
    ViewData["Title"] = "Blog";
    var sortBy = ViewBag.SortBy as string ?? "newest";
    var pageNumber = ViewBag.PageNumber as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 12;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var totalPages = (int)Math.Ceiling((double)totalCount / pageSize);
}

<div class="row gap-20">
    <!-- Başlık ve Sıralama -->
    <div class="col-12">
        <div class="bd bgc-white p-20">
            <div class="layers">
                <div class="layer w-100 mB-20">
                    <div class="peers fxw-nw ai-c">
                        <div class="peer peer-greed">
                            <h4 class="lh-1 mB-0">Blog</h4>
                        </div>
                        <div class="peer">
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    @(sortBy == "newest" ? "Önce Yeniler" : sortBy == "oldest" ? "Önce Eskiler" : sortBy == "popular" ? "En Popüler" : "Öne Çıkanlar")
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", new { pageNumber = 1, pageSize = pageSize, sortBy = "newest" })">Önce Yeniler</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", new { pageNumber = 1, pageSize = pageSize, sortBy = "oldest" })">Önce Eskiler</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", new { pageNumber = 1, pageSize = pageSize, sortBy = "popular" })">En Popüler</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", new { pageNumber = 1, pageSize = pageSize, sortBy = "featured" })">Öne Çıkanlar</a></li>
                                </ul>
                            </div>
                        </div>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="peer mR-10">
                                <a asp-controller="Blog" asp-action="Create" class="btn btn-primary" style="color: white;">
                                    <i class="ti-plus"></i> Yeni Blog Yazısı
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Blog Yazıları -->
    @if (Model != null && Model.Any())
    {
        @foreach (var blogPost in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="bd bgc-white p-20">
                    <div class="layers">
                        <!-- Görsel -->
                        @if (!string.IsNullOrEmpty(blogPost.ImageUrl))
                        {
                            <div class="layer w-100 mB-15" style="position: relative;">
                                <a asp-action="Details" asp-route-id="@blogPost.Id">
                                    <img src="@blogPost.ImageUrl" alt="@blogPost.Title" class="w-100" style="height: 250px; object-fit: cover; border-radius: 8px;">
                                    @if (!string.IsNullOrEmpty(blogPost.ImageBanner))
                                    {
                                        <div style="position: absolute; bottom: 0; left: 0; right: 0; background: rgba(0,0,0,0.7); color: white; padding: 10px; border-radius: 0 0 8px 8px;">
                                            @blogPost.ImageBanner
                                        </div>
                                    }
                                </a>
                            </div>
                        }

                        <!-- Yazar Bilgisi -->
                        @if (blogPost.Author != null)
                        {
                            <div class="layer w-100 mB-10">
                                <div class="peers fxw-nw ai-c">
                                    @if (!string.IsNullOrEmpty(blogPost.Author.ProfileImageUrl))
                                    {
                                        <div class="peer mR-10">
                                            <img src="@blogPost.Author.ProfileImageUrl" alt="@blogPost.Author.DisplayName" 
                                                 style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;">
                                        </div>
                                    }
                                    <div class="peer peer-greed">
                                        <div class="fw-600">@blogPost.Author.DisplayName</div>
                                        @if (!string.IsNullOrEmpty(blogPost.Author.Bio))
                                        {
                                            <div class="fsz-sm text-muted">@blogPost.Author.Bio</div>
                                        }
                                    </div>
                                    <div class="peer">
                                        <span class="text-muted fsz-sm">
                                            @blogPost.PublishedAt?.ToString("dd.MM.yyyy") ?? @blogPost.CreatedAt.ToString("dd.MM.yyyy")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Başlık -->
                        <div class="layer w-100 mB-10">
                            <h5 class="mB-0">
                                <a asp-action="Details" asp-route-id="@blogPost.Id" class="text-dark">
                                    @blogPost.Title
                                </a>
                            </h5>
                        </div>

                        <!-- Özet -->
                        @if (!string.IsNullOrEmpty(blogPost.Excerpt))
                        {
                            <div class="layer w-100 mB-15">
                                <p class="text-muted mB-0">@blogPost.Excerpt</p>
                            </div>
                        }

                        <!-- İstatistikler -->
                        <div class="layer w-100">
                            <div class="peers fxw-nw ai-c">
                                <div class="peer mR-20">
                                    <i class="ti-heart"></i> @blogPost.LikeCount
                                </div>
                                <div class="peer mR-20">
                                    <i class="ti-comment"></i> @blogPost.CommentCount
                                </div>
                                <div class="peer">
                                    <span class="text-muted">@(blogPost.ViewCount > 1000 ? $"{blogPost.ViewCount / 1000.0:F1}K" : blogPost.ViewCount.ToString()) Görüntülenme</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Sayfalama -->
        @if (totalPages > 1)
        {
            <div class="col-12">
                <div class="bd bgc-white p-20">
                    <nav aria-label="Blog sayfalama">
                        <ul class="pagination justify-content-center mB-0">
                            @if (pageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber - 1, pageSize = pageSize, sortBy = sortBy })">Önceki</a>
                                </li>
                            }
                            @for (int i = Math.Max(1, pageNumber - 2); i <= Math.Min(totalPages, pageNumber + 2); i++)
                            {
                                <li class="page-item @(i == pageNumber ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, pageSize = pageSize, sortBy = sortBy })">@i</a>
                                </li>
                            }
                            @if (pageNumber < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = pageNumber + 1, pageSize = pageSize, sortBy = sortBy })">Sonraki</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="bd bgc-white p-20">
                <p class="text-center text-muted">Henüz blog yazısı bulunmamaktadır.</p>
            </div>
        </div>
    }
</div>


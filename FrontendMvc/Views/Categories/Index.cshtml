@model IEnumerable<FrontendMvc.Models.Recipes.CategoryViewModel>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row gap-20">
    <div class="col-md-12">
        <div class="bd bgc-white p-30">
            <div class="layers">
                <div class="layer w-100 mB-20">
                    <div class="peers fxw-nw ai-c">
                        <div class="peer peer-greed">
                            <h4 class="lh-1 mB-0">Kategoriler</h4>
                        </div>
                        <div class="peer">
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="ti-plus"></i> Yeni Kategori Ekle
                            </a>
                        </div>
                    </div>
                </div>

                @if (!Model.Any())
                {
                    <div class="layer w-100 ta-c p-30">
                        <h5 class="c-grey-600">Henüz kategori yok</h5>
                        <p class="c-grey-500 mT-10">İlk kategoriyi ekleyerek başlayın!</p>
                        <a asp-action="Create" class="btn btn-primary mT-20">
                            <i class="ti-plus"></i> İlk Kategoriyi Ekle
                        </a>
                    </div>
                }
                else
                {
                    <div class="layer w-100">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>İkon</th>
                                        <th>Ad</th>
                                        <th>Açıklama</th>
                                        <th>Sıra</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(category.Icon))
                                                {
                                                    <i class="@category.Icon fsz-lg"></i>
                                                }
                                                else
                                                {
                                                    <span class="c-grey-500">-</span>
                                                }
                                            </td>
                                            <td class="fw-600">@category.Name</td>
                                            <td>@(category.Description ?? "-")</td>
                                            <td>@category.DisplayOrder</td>
                                            <td>
                                                <div class="peers fxw-nw gap-5">
                                                    <div class="peer">
                                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary" style="color: white;">
                                                            <i class="ti-pencil"></i> Düzenle
                                                        </a>
                                                    </div>
                                                    <div class="peer">
                                                        <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?');">
                                                            <button type="submit" class="btn btn-sm btn-danger" style="color: white;">
                                                                <i class="ti-trash"></i> Sil
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

